<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "mRegButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#64E3F1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/shape_button_reg</item>
        <item name="android:shadowColor">#A8A8A8"</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>
    <style name="mBasicButt" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#000</item>
    </style>
    
    <style name="mPrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
